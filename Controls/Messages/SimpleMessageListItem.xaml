<local:MessageListItem x:Name="Self" x:Class="General.WPF.SimpleMessageListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:General.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox IsReadOnly="True" TextWrapping="Wrap" BorderThickness="0" Background="Transparent" 
           Foreground="{Binding ElementName=Self, Path=Foreground, Mode=OneWay}"
           Text="{Binding ElementName=Self, Path=Message, Mode=OneWay}"/>
</local:MessageListItem>
