<UserControl x:Class="General.WPF.TabPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:General.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" AllowDrop="True">
    <Grid x:Name="mRootGrid">
        <Grid x:Name="mPanelGrid">
            <local:TabControl x:Name="mTabControl" BorderThickness="0,0,0,0" />
        </Grid>

        <Grid x:Name="mSlotMask" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" Opacity=".5" Visibility="Hidden" IsHitTestVisible="False" />
    </Grid>
</UserControl>
