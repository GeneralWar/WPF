<UserControl x:Class="General.WPF.WrapPanel" Name="Self"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:General.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel x:Name="mCore" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="{Binding ElementName=Self, Path=Orientation, Mode=TwoWay}" ItemHeight="{Binding ElementName=Self, Path=ItemHeight, Mode=TwoWay}"/>
</UserControl>
